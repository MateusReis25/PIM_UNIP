<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="25dp"

    tools:context="view.login.Menu">


    <LinearLayout
        android:layout_width="361dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/comfortaa_light"
            android:gravity="center"
            android:text="Olá, "
            android:textAlignment="textStart"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/textViewUser"
            android:layout_width="224dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/comfortaa_bold"
            android:gravity="center"
            android:textAlignment="textStart"
            android:textSize="10sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnSairMenu"
            android:layout_width="75dp"
            android:layout_height="28dp"
            android:layout_gravity="end"
            android:background="#00FFFFFF"
            android:fontFamily="@font/comfortaa_bold"
            android:includeFontPadding="false"
            android:onClick="sair"
            android:paddingBottom="3dp"
            android:text="Sair"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="10sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:gravity="start|end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/comfortaa_light"
            android:text="Seja Bem-Vindo!"
            android:textAlignment="textEnd"
            android:textSize="10sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="318dp"
        android:layout_height="102dp"
        android:background="#00BD2424"
        app:srcCompat="@drawable/bebida_alcoolica" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cookie"
        android:text="Company Drink’s"
        android:textAlignment="center"
        android:textColor="#D0000000"
        android:textSize="40sp"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="46dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnFuncionariosMenu"
            android:layout_width="135dp"
            android:layout_height="match_parent"
            android:backgroundTint="#E1E1E1"
            android:fontFamily="@font/comfortaa_bold"
            android:selectAllOnFocus="true"
            android:text="Funcionários"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold"
            app:cornerRadius="30dp"
            app:icon="@drawable/carteira_identidade_"
            app:iconGravity="textTop"
            app:iconSize="50dp"
            app:iconTint="#000000" />

        <Button
            android:id="@+id/btnFornecedoresMenu"
            android:layout_width="135dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="32dp"
            android:backgroundTint="#E1E1E1"
            android:fontFamily="@font/comfortaa_bold"
            android:text="Fornecedores"
            android:textColor="#000000"
            android:textSize="11sp"
            android:textStyle="bold"
            app:cornerRadius="30dp"
            app:icon="@drawable/fornecedor"
            app:iconGravity="textTop"
            app:iconSize="50dp"
            app:iconTint="#000000" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="21dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPagamentoMenu"
            android:layout_width="135dp"
            android:layout_height="match_parent"
            android:backgroundTint="#E1E1E1"
            android:fontFamily="@font/comfortaa_bold"
            android:selectAllOnFocus="true"
            android:text="Pagamento"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold"
            app:cornerRadius="30dp"
            app:icon="@drawable/mao"
            app:iconGravity="textTop"
            app:iconSize="50dp"
            app:iconTint="#000000" />

        <Button
            android:id="@+id/btnCadastrarUsuarioMenu"
            android:layout_width="135dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="32dp"
            android:backgroundTint="#E1E1E1"
            android:fontFamily="@font/comfortaa_bold"
            android:onClick="cadastrarUsuario"
            android:selectAllOnFocus="true"
            android:text="Cadastrar Usuário"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold"
            app:cornerRadius="30dp"
            app:icon="@drawable/adicionar_usuario"
            app:iconGravity="textTop"
            app:iconSize="45dp"
            app:iconTint="#DA000000" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="29dp" />


</LinearLayout>