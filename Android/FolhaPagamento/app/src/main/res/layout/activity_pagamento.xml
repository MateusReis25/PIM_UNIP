<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".Pagamento">

    <TextView
        android:id="@+id/texviewfor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/comfortaa_bold"
        android:text="Pagamento"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnVoltarPagamento"
        android:layout_width="49dp"
        android:layout_height="44dp"
        android:background="#00FFFFFF"
        android:padding="8dp"
        app:icon="@drawable/voltar"
        app:iconSize="30dp"
        app:iconTint="#000000" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="23dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButtonFuncionario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/comfortaa_bold"
            android:text="FuncionÃ¡rio"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/radioButtonFornecedor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/comfortaa_bold"
            android:text="Fornecedor"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/inputPesquisaPagamento"
            android:layout_width="269dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/comfortaa_bold"
            android:hint="Digite o Id ou matricula"
            android:inputType="text"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnPesquisarPagamento"
            android:layout_width="22dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            app:icon="@drawable/lupa"
            app:iconGravity="textEnd"
            app:iconSize="35dp"
            app:iconTint="#000000" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <ListView
        android:id="@+id/listViewPagamento"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>